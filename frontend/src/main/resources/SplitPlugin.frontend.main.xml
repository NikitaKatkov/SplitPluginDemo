<idea-plugin package="com.example.splitplugin.frontend">
    <dependencies>
        <plugin id="com.intellij.platform.experimental.frontend"/>
        <module name="SplitPlugin.shared.main"/>
    </dependencies>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="TestToolWindow"
                    icon="AllIcons.Actions.AddToDictionary"
                    factoryClass="com.example.splitplugin.frontend.FrontendTestToolwindowFactory"
                    secondary="false"
                    anchor="left"/>

        <toolWindow factoryClass="com.example.splitplugin.frontend.jcef.ChatToolWindowFactory"
                    id="ChatToolWindowFactory"
                    secondary="false"
                    anchor="right"/>
        <toolWindow factoryClass="com.example.splitplugin.frontend.jcef.ChatUrlWindowFactory"
                    id="ChatUrlWindowFactory"
                    secondary="false"
                    anchor="right"/>
    </extensions>
</idea-plugin>